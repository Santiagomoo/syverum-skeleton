{
    "name": "syverum/syverum-skeleton",
    "description": "A starter project skeleton for applications built with the Syverum framework",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require": {
        "jenssegers/blade": "^1.4",
        "vlucas/phpdotenv": "^5.6",
        "syverum/framework": "^1.0"
    },
    "scripts": {
        "post-create-project-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "dev": "npx -y concurrently \"php -S 127.0.0.1:3000 -t public\" \"npx -y @tailwindcss/cli -i ./resources/css/app.css -o ./public/css/output.css --watch\""
    }
}
